<section class="container rounded shadow login-container">
    <div class="row">
        <div class="col align-self-end px-5 pb-4">
            <form class="login-form">
                <div class="form-outline mb-4">
                    <input type="text" id="username-login" class="form-control form-control-md" />
                    <label class="form-label" for="username-login">Username</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="password" id="password-login" class="form-control form-control-md" />
                    <label class="form-label" for="password-login">Password</label>
                </div>
                <div class="pt-1 mb-4">
                    <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                </div>
            </form>
        </div>
        <div class="col login-image" style="height: 50vh;">
            <div class="login-text" style="border-radius: 0 6px 6px 0;">
                <img src="assests/images/clock-logo.png" alt="logo" width="60" height="60" />
                <br />
                <span>TICK TOCK</span>
                <br />
                <p id="slogan">an app to clock your working hours and more</p>
            </div>
        </div>
    </div>
</section>
