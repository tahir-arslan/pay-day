<table class="table table-striped table-responsive">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Hourly Wage</th>
    </tr>

    {{#each employees as |employee|}}
    <tr>
        <td>
        <a href="/manager/view/{{employee.id}}">
            {{employee.id}}
        </a>
        </td>
        <td>
        <a href="/manager/view/{{employee.id}}">
            {{employee.first_name}} {{employee.last_name}}
        </a>
        </td>
        <td>
            {{employee.hourly_wage}}
        </td>
    </tr>
    {{/each}}
</table>

<div class="add-employee text-center"><a href="/manager/add">Add an Employee</a></div>