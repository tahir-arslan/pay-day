<div class="border border-dark rounded px-4 py-5">
    <table class="table table-hover table-responsive employee-workinghour-table border-top">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Hourly Wage</th>
            </tr>
        </thead>
        {{#each employees as |employee|}}
        <tr>
            <td>
            <a href="/manager/view/{{employee.id}}">
                {{employee.id}}
            </a>
            </td>
            <td>
            <a href="/manager/view/{{employee.id}}">
                {{employee.first_name}} {{employee.last_name}}
            </a>
            </td>
            <td>
               $ {{employee.hourly_wage}}
            </td>
        </tr>
        {{/each}}
    </table>
    <div class="add-employee text-center pt-3"><a href="/manager/add" class="px-5 py-3">Add an Employee</a></div>
</div>